<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_left_bg"
        android:padding="9dp"
        android:layout_margin="5dp"
        android:layout_alignParentStart="true"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/msg_color"
                android:typeface="normal"
                android:id="@+id/receiver_msg_tv"
                android:maxWidth="300dp"
                android:text="Hello Huzayfa how a you?"
                />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/receiver_msg_tv"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/receiver_msg_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="9dp"
                android:text="20:20"
                android:textColor="@color/received_date_color"
                android:textSize="11sp" />


            <ImageView
                android:id="@+id/seen_iv"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:src="@drawable/double_check"
                app:tint="@color/received_date_color" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>

